!!!
%html(lang="ja")
  %head
    = partial 'partials/head'
  %body
    %header
      %h1
    #main(role="main")
      %article.post
        .post-header
          %h1.post-title= current_article.title
          .post-meta
            %time(datetime="#{current_article.date}")
              = current_article.date.strftime("%Y/%m/%d")
        .post-body
          = yield
    %aside
    %footer
