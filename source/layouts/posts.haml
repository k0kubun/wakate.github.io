!!!
%html(lang="ja")
  %head
    = partial 'partials/head'
  %body
    = partial "partials/narrow-header"
    #main(role="main")
      %article.post
        .post-header
          %h1.post-title
            = link_to current_article.title, current_article
          .post-meta
            %time(datetime="#{current_article.date}")
              = current_article.date.strftime("%Y/%m/%d")
        .post-body
          = yield

    = partial "partials/sub-contents", locals: { articles: blog.articles[0...10], tags: blog.tags }
    = partial "partials/footer"
